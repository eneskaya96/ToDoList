  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "Tasks",
      "description": "Task Container Operations"
    },
    {
      "name": "Task",
      "description": "Task Operations"
    }
  ],
  "paths": {
    "/tasks/getAllTasks": {
      "get": {
        "tags": [
          "Tasks"
        ],
        "summary": "Returns all available tasks",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/tasks/getTasks/{table}": {
      "parameters": [
        {
          "name": "table",
          "in": "path",
          "required": true,
          "description": "Table Name, One of them {TODO, INPROGRESS, DONE }",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Tasks"
        ],
        "summary": "Returns all available tasks in table which name is tableName",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Failed. Misunderstood Request."
          },
          "404": {
            "description": "Failed. Task request not found."
          }
        }
      }
    },
    "/task/createTask": {
      "post": {
        "tags": [
          "Task"
        ],
        "requestBody": {
          "description": "Content of Task",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createTaskPostBody"
              }
            }
          }
        },
        "summary": "Create a task with content",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/task/moveTask/{id}/{toTable}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "Task id",
          "type": "string"
        },
        {
          "name": "toTable",
          "in": "path",
          "required": true,
          "description": "Move to toTable , One of them {TODO, INPROGRESS, DONE }",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Task"
        ],
        "summary": "Move to task which id is given to toTable Task",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Failed. Misunderstood Request."
          },
          "404": {
            "description": "Failed. Task request not found."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "createTaskPostBody": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "format": "string"
          }
        }
      }
    }
  }
}